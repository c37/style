{% macro active(selected="") %}

<nav class="show-mobile">
  <ul>
    <li>

      <div class="nav-mobile">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
      </div>

      <script>
          window.addEventListener('load', function () {
              document.querySelector('.nav-mobile').onclick = function () {
                  this.classList.toggle('active');
              };
          });
      </script>

    </li>
    <li>
      <a href="/">
        <i class="logo"></i>
      </a>
    </li>
    <li>
        <i class="icon-search-20"></i>
    </li>
  </ul>
</nav>

<nav class="hide-mobile">
  <ul>
    <li>
      <a href="/">
        <i class="logo"></i>
      </a>
    </li>
    <li>
      <a href="/foundation" class="{%if selected == 'foundation' %}selected{% endif %}">Foundation</a>
    </li>
    <li>
      <a href="/layout" class="{%if selected == 'layout' %}selected{% endif %}">Layout</a>
    </li>
    <li>
      <a href="/graphic" class="{%if selected == 'graphic' %}selected{% endif %}">Graphic</a>
    </li>
    <li>
      <a href="/container" class="{%if selected == 'container' %}selected{% endif %}">Container</a>
    </li>
    <li>
      <a href="/component" class="{%if selected == 'component' %}selected{% endif %}">Component</a>
    </li>
    <li>
        <i class="icon-search-20"></i>
    </li>
    
  </ul>
</nav>
{% endmacro %}